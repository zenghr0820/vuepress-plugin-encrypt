{
  "name": "vuepress-plugin-encrypt",
  "version": "2.0.14",
  "description": "一个用于 VuePress 2.x 的内容加密插件",
  "type": "module",
  "main": "lib/node/index.js",
  "types": "lib/node/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/zenghr0820/vuepress-plugin-encrypt.git"
  },
  "bugs": {
    "url": "https://github.com/zenghr0820/vuepress-plugin-encrypt/issues"
  },
  "homepage": "https://github.com/zenghr0820/vuepress-plugin-encrypt#readme",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "vuepress-plugin-strict-encrypt": "./lib/bin/cli.js"
  },
  "scripts": {
    "dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "build": "rimraf lib && tsc && tsc-alias && pnpm run copy:styles",
    "copy:styles": "copyfiles -u 1 \"src/client/styles/**/*.{css,scss}\" lib",
    "clean": "rimraf lib",
    "release": "npm version patch && npm publish"
  },
  "files": [
    "lib"
  ],
  "exports": {
    ".": "./lib/node/index.js",
    "./client": "./lib/client/index.js",
    "./styles/*": "./lib/client/styles/*",
    "./package.json": "./package.json"
  },
  "keywords": [
    "vuepress",
    "plugin",
    "encrypt",
    "password",
    "security",
    "protection"
  ],
  "author": "Zenghr",
  "license": "MIT",
  "dependencies": {
    "crypto-es": "^2.1.0",
    "crypto-js": "^4.2.0",
    "js-yaml": "^4.1.0",
    "markdown-it-container": "^4.0.0"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/js-yaml": "^4.0.9",
    "@types/markdown-it": "^13.0.9",
    "@types/node": "^20.17.30",
    "@vuepress/client": "2.0.0-rc.21",
    "@vuepress/core": "2.0.0-rc.21",
    "@vuepress/utils": "2.0.0-rc.21",
    "@vueuse/core": "^10.11.1",
    "commander": "^11.1.0",
    "copyfiles": "^2.4.1",
    "markdown-it": "^13.0.2",
    "rimraf": "^6.0.1",
    "sass": "^1.87.0",
    "tsc-alias": "^1.8.15",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
